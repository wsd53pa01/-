
@model HomeWork.AccountBook
@{ 
    Layout = null;
}
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Categoryyy, "類別", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select for="Categoryyy" id="category" class="form-control">
                        <option value="" selected>請選擇</option>
                        <option>0</option>
                        <option>1</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Categoryyy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Amounttt, "金額", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amounttt, new { htmlAttributes = new { @class = "form-control", type = "text", id = "Amounttt", placeholder = "金額" } })
                    @Html.ValidationMessageFor(model => model.Amounttt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Dateee, "日期", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dateee, new { htmlAttributes = new { @class = "form-control", type = "text", id = "date", placeholder = "日期" } })
                    @Html.ValidationMessageFor(model => model.Dateee, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Remarkkk, "備註", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Remarkkk, htmlAttributes: new { @class = "form-control", id = "description" })
                    @Html.ValidationMessageFor(model => model.Remarkkk, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="送出" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
